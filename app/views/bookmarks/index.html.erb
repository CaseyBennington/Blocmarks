<h1>Bookmarks</h1>
<hr />

<div class="row">
  <div class="col-md-12">
    <% @bookmarks.each do |bookmark| %>
      <div class="">
        <%= render partial: 'likes/like', locals: { bookmark: bookmark } %>
        <% if bookmark.title != nil %>
          <%= "#{bookmark.title}" %>
          <br />
        <% else %>
          <p>Bookmark title preview is not available.</p>
        <% end %>
        <%= link_to "#{bookmark.url}", "http://#{bookmark.url}", target: "_blank" %>
          <% if policy(bookmark).update? %>
            <%= link_to "edit", edit_bookmark_path(bookmark), class: 'edit-destroy-link' %>
            <%= link_to "destroy", [bookmark], method: :delete, data: { confirm: 'Are you sure you want to delete this bookmark?' }, class: 'edit-destroy-link' %>
            <br />
          <% end %>
        <% if bookmark.image != nil %>
          <%= image_tag(("#{bookmark.image}"), size: "240").html_safe %>
        <% else %>
          <%= image_tag("no-preview.png", size: "240", :alt => "No Preview Available") %>
        <% end %>
        <hr />
        <%= link_to "#{bookmark.topic.title}", bookmark.topic %>
      </div>
    <% end %>
  </div>
</div>
