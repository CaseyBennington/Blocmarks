<h1><%= @topic.title %></h1>

<% if policy(Topic.new).edit? %>
  <%= link_to "Edit Topic", edit_topic_path, class: 'btn btn-success' %>
  <%= link_to "Delete Topic", @topic, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this topic? Deleting a topic will delete all associated bookmarks.' } %>
<% end %>

<div class = "row">
  <div class = "col-md-8">
    <% if @topic.bookmarks.count >= 1 %>
      <% @topic.bookmarks.each do |bookmark| %>
        <div class = "media">
          <div class = "media-body">

              <%= link_to my_bookmark.url, "http://#{my_bookmark.url}", target: "_blank" %>
              <% if policy(my_bookmark).update? %>
                <%= link_to "edit", edit_bookmark_path(my_bookmark) %>
                <%= link_to "destroy", my_bookmark, method: :delete, data: { confirm: 'Are you sure you want to delete this bookmark?' } %>
              <% end %>
              <br />
          </div>
        </div>
      <% end %>
    <% else %>
      <p>No bookmarks!</p>
    <% end %>
  </div>

  <div class = "col-md-4">
    <%= link_to "New Bookmark", new_topic_bookmark_path(@topic, @bookmark), class: 'btn btn-success' %>
    <%= link_to "Back", topics_path, class: 'btn btn-link' %>
  </div>
</div>
