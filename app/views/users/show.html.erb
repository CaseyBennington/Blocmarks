<div class="row">
   <div class="col-md-8">
     <div class="media">
       <div class="media-body">
         <h2 class="media-heading"><%= @user.email %></h2>
         <small>
           <%= pluralize(@user.bookmarks.count, 'bookmark') %>,
           <%= pluralize(@user.likes.count, 'like') %>
         </small>
       </div>
     </div>
   </div>
 </div>

 </br>

<div class="row">
   <div class="tabbable tabs-left">
     <ul class="nav nav-tabs">
       <li class="active"><a href="#bookmarks" data-toggle="tab">Bookmarks</a></li>
       <li><a href="#likes" data-toggle="tab">Likes</a></li>
     </ul>
     <div class="">
       <div class="tab-pane active">
       </br>
         <% @user_bookmarks.each do |bookmark| %>
          <div class="">
            <%= render partial: 'likes/like', locals: { bookmark: bookmark } %>
            <% if bookmark.title != nil %>
              <%= "#{bookmark.title}" %>
              </br>
            <% else %>
              <p>Bookmark title preview is not available</p>
              </br>
            <% end %>
            <%= link_to "#{bookmark.title}", "#{bookmark.url}", target: "_blank", class: 'embedly-card' %>
            <% if policy(bookmark).update? %>
              <%= link_to "edit", edit_bookmark_path(bookmark), class: 'edit-destroy-link' %>
              <%= link_to "destroy", [bookmark], method: :delete, data: { confirm: 'Are you sure you want to delete this bookmark?' }, class: 'btn btn-danger' %>
           </br>
            <% end %>
            <% if bookmark.image != nil %>
              <%= image_tag(("#{bookmark.image}"), size: "200").html_safe %>
            <% else %>
              <%= image_tag("No_Image_Available.png", size: "200", :alt => "No Image Available") %>
            <% end %>
            <hr>
            <%= link_to "##{bookmark.topic.title}", bookmark.topic(:topic_id) %>
        </div>
         <% end %>
       </div>
       <div class="tab-pane">
          </br>
         <% @liked_bookmarks.each do |like| %>
          <div class="">
            <%= render partial: 'likes/like', locals: { bookmark: like.bookmark } %>
            <% if like.bookmark.title  != nil %>
              <%= "#{like.bookmark.title}" %>
              </br>
            <% else %>
              <p>Bookmark title preview is not available</p>
              </br>
            <% end %>
            <%= link_to "#{like.bookmark.title}", "#{like.bookmark.url}", target: "_blank", class: 'embedly-card' %>
            <% if policy(Topic).update? %>
              <%= link_to "edit", edit_bookmark_path(like.bookmark), class: 'btn btn-danger' %>
              <%= link_to "destroy", [like.bookmark], method: :delete, data: { confirm: 'Are you sure you want to delete this bookmark?' }, class: 'btn btn-danger' %>
           </br>
            <% end %>
            <% if like.bookmark.image != nil %>
              <%= image_tag(("#{like.bookmark.image}"), size: "200").html_safe %>
            <% else %>
              <%= image_tag("No_Image_Available.png", size: "200", :alt => "No Image Available") %>
            <% end %>
            <hr>
            <%= link_to "##{like.bookmark.topic.title}", like.bookmark.topic(:topic_id) %>
            </div>
          <% end %>
       </div>
     </div>
   </div>
 </div>
